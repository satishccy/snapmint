generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PrintRequestStatus {
  pending
  in_progress
  completed
  collected
}

model PrintRequest {
  id            Int               @id @default(autoincrement())
  wallet_address String           @db.VarChar(255)
  asset_id      String            @db.VarChar(255)
  status        PrintRequestStatus @default(pending)
  created_at    DateTime          @default(now())
  updated_at    DateTime          @updatedAt

  @@index([wallet_address])
  @@map("print_requests")
}

model FreeMint {
  id            Int               @id @default(autoincrement())
  wallet_address String           @db.VarChar(255) @unique
  txid          String            @db.VarChar(255)
  created_at    DateTime          @default(now())

  @@index([wallet_address])
  @@map("free_mints")
}
